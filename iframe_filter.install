/**
 * Implementation of hook_install().
 */
function iframe_filter_install() {
  drupal_set_message(t('The iframe filter has been installed. Before this does anything, the iframe filter needs to be added to one or more input formats. Visit the <a href="!url">input format administration</a> to set up this filter.', array('!url' => url('admin/settings/filters'))), 'warning');
}
